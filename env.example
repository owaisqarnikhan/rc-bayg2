# Environment Configuration Template for AWS EC2 Deployment
# Copy this to .env and update the values

# Application Environment
NODE_ENV=production
PORT=5000
SERVER_HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://bayg_user:BaygSecure2024!@localhost:5432/bayg_production

# Session Security
SESSION_SECRET=replace_with_random_64_character_string
JWT_SECRET=replace_with_random_64_character_string

# Server Configuration for AWS EC2 IP: 3.136.95.83
COOKIE_DOMAIN=3.136.95.83
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax
BASE_URL=http://3.136.95.83
API_URL=http://3.136.95.83/api

# File Upload Configuration
UPLOAD_PATH=/home/ubuntu/bayg-ecommerce/uploads
MAX_FILE_SIZE=50MB

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=/home/ubuntu/bayg-ecommerce/logs/app.log

# Optional Email Configuration (configure later if needed)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# Performance
CLUSTER_WORKERS=2